<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<shortcuts>
   <programGroup defaultName='Jajuk' location='applications'/>
   <skipIfNotSupported/>
  <!-- Unix -->
  <shortcut
     name='Jajuk'
     programGroup='yes'
     desktop='yes'
     applications='no'
     startMenu='no'
     startup='no'
     target='sh'
     type='Application'
     encoding='UTF-8'
     commandLine='&quot;$INSTALL_PATH/jajuk.sh&quot;'
     workingDirectory=''
     description='Jajuk advanced JukeBox'
     iconIndex='0'
     iconFile='$INSTALL_PATH/jajuk-logo.png'
     initialState='noShow'
     os='unix'>
     <createForPack name='main pack'/>
   </shortcut>
   
    <shortcut
     name='Uninstall'
     programGroup='yes'
     desktop='no'
     applications='no'
     startMenu='no'
     startup='no'
     type='Application'
     encoding='UTF-8'
     target='java'
     commandLine='-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;'
     workingDirectory=''
     description='Uninstall Jajuk'
     iconIndex='0'
     iconFile='$INSTALL_PATH/dist-files/icons/16x16/delete.png'
     initialState='noShow'
     os='unix'>
     <createForPack name='main pack'/>
   </shortcut>
   
   <!-- Windows -->
   <shortcut
     name='Jajuk'
     programGroup='yes'
     desktop='yes'
     applications='no'
     startMenu='no'
     startup='no'
     target='javaw'
     commandLine='-client -Xms25M -Xmx512M -XX:MinHeapFreeRatio=20 -XX:MaxHeapFreeRatio=30 -Dapple.laf.useScreenMenuBar=true -Xincgc -XX:NewRatio=12 -jar "$INSTALL_PATH/bin/jajuk.jar" -notaskbar TEST_FLAG_REPLACED_BY_ANT'
     workingDirectory='$INSTALL_PATH/bin'
     description='Jajuk advanced JukeBox'
     iconIndex='0'
     iconFile='$INSTALL_PATH/dist-files/images/jajuk-logo.ico'
     initialState='noShow'
     os='windows'>
     <createForPack name='main pack'/>
   </shortcut>
    <shortcut
     name='Uninstall'
     programGroup='yes'
     desktop='no'
     applications='no'
     startMenu='no'
     startup='no'
     target='javaw'
     commandLine='-jar "$INSTALL_PATH/Uninstaller/uninstaller.jar"'
     workingDirectory='$INSTALL_PATH/Uninstaller'
     description='Uninstall Jajuk'
     iconIndex='0'
     iconFile='$INSTALL_PATH/dist-files/images/jajuk-uninstall.ico'
     initialState='noShow'
     os='windows'>
     <createForPack name='main pack'/>
   </shortcut>
  </shortcuts>
