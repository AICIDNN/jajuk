<?xml version="1.0" encoding="UTF-8"?>
<!--Ant script for packagers only-->

<project default="all" name="jajuk" basedir="..">
  <property name="distdir" value="/tmp/jajuk">
  </property>
  <property name="libdir" value="lib">
  </property>
  <property name="srcdir" value="src">
  </property>
  <property name="javadocdir" value="dist-files/doc/api">
  </property>
  <property name="version" value="0.1">
  </property>
  <property name="jarname" value="jajuk-">
  </property>
  
  <target name="all" description="o Create the entire package" depends="izpack"/>
  
  <target name="clean" description="o Clean up the distribution">
    <delete dir="${distdir}">
    </delete>
   </target>
  
  <target name="mkdist" description="o Create the distribution structure" depends='clean'>
    <mkdir dir="${distdir}"/>
    <copy todir="${distdir}/lib" >
     <fileset dir="${libdir}"/>
  	</copy>
  	<mkdir dir="${distdir}/bin"/>
    <mkdir dir="${distdir}/classes"/>
    <copy todir="${distdir}/src" >
     <fileset dir="${srcdir}"/>
  	</copy>
  	<copy todir="${distdir}" >
     <fileset file="${basedir}/dist-files/legals/LICENSE.txt"/>
  	</copy>
  </target>
 
 <target name="compile" description="o Compile the code" depends="mkdist">
    <javac destdir="${distdir}/classes" deprecation="true" debug="true" optimize="false" excludes="**/package.html">
      <src>
        <pathelement path="${distdir}/${srcdir}">
        </pathelement>
      </src>
      <classpath>
        <fileset dir="${distdir}/lib">
          <include name="*.jar">
          </include>
        </fileset>
      </classpath>
    </javac>
    <copy todir="${distdir}/classes/org/jajuk/i18n" >
     <fileset file="${distdir}/src/org/jajuk/i18n/*.properties"/>
  	</copy>
    <mkdir dir="${distdir}/classes/org/jajuk/icons"/>
    <mkdir dir="${distdir}/classes/org/jajuk/images"/>
  	<mkdir dir="${distdir}/classes/org/jajuk/docs"/>
  	<copy todir="${distdir}/classes/org/jajuk/icons" >
     <fileset dir="${basedir}/dist-files/icons"/>
  	</copy>
  	<copy todir="${distdir}/classes/org/jajuk/images" >
     <fileset dir="${basedir}/dist-files/images"/>
  	</copy>
  	<copy todir="${distdir}/classes/org/jajuk/docs" >
     <fileset file="${basedir}/dist-files/doc/about.html"/>
  	</copy>
  </target>
 

  <target name="jar" description="o Create the jar" depends="compile">
    <jar jarfile="${distdir}/bin/jajuk-${version}.jar" excludes="**/package.html" basedir="${distdir}/classes" manifest="${basedir}/dist-files/packaging/MANIFEST.MF"/>
  </target>
  
  <target name="help" description="o Create the help jar">
    <jar jarfile="${distdir}/bin/jajuk-help-${version}.jar" basedir="${basedir}/dist-files/doc/jajuk-hs"/>
  </target>



   <target name="javadoc" description="o Generate javadoc" depends="jar">
    <mkdir dir="${javadocdir}">
    </mkdir>
    <tstamp>
      <format pattern="2003-yyyy" property="year">
      </format>
    </tstamp>
    <property name="copyright" value="Copyright &amp;copy;  Jajuk team. All Rights Reserved.">
    </property>
    <property name="title" value="jajuk pre-alpha-build20031114 API">
    </property>
    <javadoc use="true" private="true" destdir="${javadocdir}" author="true" version="true" packagenames="org.jajuk.base.*">
      <classpath>
        <fileset dir="${libdir}">
          <include name="*.jar">
          </include>
        </fileset>
        <pathelement location="target/${final.name}.jar">
        </pathelement>
      </classpath>
    </javadoc>
  </target>

  <taskdef name="izpack" classpath="/prog/IzPack3.4.0/lib/compiler.jar"
         classname="com.izforge.izpack.ant.IzPackTask"/>
      <target name='izpack' >
        <echo message="Makes the installer using IzPack"/>
                <izpack input="./dist-files/packaging/jajuk.izpack"
        output='./dist-files/packaging/${final.name}.jar'
        basedir="/"
        installerType="standard-kunststoff"
        izPackDir="/prog/IzPack3.4.0"/>
      </target>
  
</project>